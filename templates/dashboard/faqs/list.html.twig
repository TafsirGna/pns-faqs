 <div class = "clearfix w-100 py-2">
    <h5 class = "float-left">Liste des faqs</h5>
    <a class="btn btn-secondary btn-light float-right small" type="button" href="{{path('dashboard_new_faq')}}">
        <span class = "text-success font-italic">New</span>
    </a>
</div>

{% if faqs|length == 0 %}
    <div class="alert alert-primary small font-italic" role="alert">
        No recorded faqs 
    </div>
{% else %}
    <table class="table table-striped">
        <thead>
            <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Description</th>
            <th scope="col">Platform</th>
            <th scope="col"></th>
            </tr>
        </thead>
        <tbody>
            {% for faq in faqs %}
                <tr>
                    <th scope="row">{{loop.index}}</th>
                    <td>{{faq.name}}</td>
                    <td>{{faq.description}}</td>
                    <td>{{faq.platform.name}}</td>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-outline-secondary btn-sm dropdown-toggle float-right small" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Actions
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                <a class="dropdown-item font-italic small" href="/logout">Edit</a>
                                <a class="dropdown-item text-danger font-italic small" href="{{path('dashboard_faq_deletion', {id: faq.id})}}">Delete</a>
                                {# <a class="dropdown-item" href="#">Another action</a>
                                <a class="dropdown-item" href="#">Something else here</a> #}
                            </div>
                        </div>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endif %}
